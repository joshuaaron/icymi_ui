---

<div class="split-container">
  <section class="pane content-pane">
    <div class="pane-content">
      <slot name="content"/>
    </div>
  </section>

  <section class="pane demo-pane">
    <div class="demo-stage">
      <slot name="demo"/>
    </div>
  </section>
</div>

<style>
  /* Base Mobile Styles (Stacked) */
  .split-container {
    display: grid;
    grid-template-columns: 1fr;
    width: 100%;
    height: 100%;
    padding: 2rem;
  }

  .pane {
    border-bottom: 1px solid #eee;
    container-type: inline-size;
  }

  /* Desktop Styles (Split Screen) */
  @media (min-width: 900px) {
    .split-container {
      /* 1. Subtract header height if your MainLayout has a fixed header.
         e.g., calc(100vh - 64px)
      */
      height: 100svh;
      grid-template-columns: 1fr 1fr; /* 50/50 split */
      overflow: hidden; /* Prevents whole page scrolling */
    }

    .pane {
      overflow-y: auto;
      scrollbar-width: none;
      border-bottom: none;
    }

    /* Add a divider line between columns */
    .content-pane {
      border-right: 1px solid #afb0b1ae;
    }

    /* Optional: Style the demo area to look like a "canvas" */
    .demo-pane {
      display: grid;
      height: 100%;
      justify-content: center; /* Centers the demo component */
    }

    /* Optional: Constraint for readability on the text side */
    .pane-content {
      max-width: 65ch;
      margin: 0 auto;
    }
  }
</style>
